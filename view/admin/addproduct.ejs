            <div class="row tm-edit-product-row">
              <div class="col-xl-6 col-lg-6 col-md-12">
                <form action="/admin/addproducts" method="post" id="form1" enctype="multipart/form-data" class="tm-edit-product-form">
                  <div class="form-group mb-3">
                    <label
                      for="name"
                      >Product Name
                    </label>
                    <input
                      id="name"
                      name="name"
                      type="text"
                      class="form-control validate"
              
                    />
                    <small class="text-danger error"></small>
                  </div>
                  <div class="form-group mb-3">
                    <label
                      for="name"
                      >Brand
                    </label>
                    <input
                      id="brand"
                      name="brand"
                      type="text"
                      class="form-control validate"
                      
                    />
                    <span class=" text-danger error"></span>
                  </div>
                  <div class="form-group mb-3">
                    <label
                      for="description"
                      > Product Description</label
