
<%- include('../layout/homeheader.ejs',{loginsession}); -%>



<style>
  
  table, th, td {
    border: 1px solid black;
  }
  </style>

<div class="container"  style="margin-bottom: 87px;">
    <div class="card mt-5 pt-1">
        <div class="card-body" style="box-shadow:  1px 1px 20px 7px #1b1b1c; ">
        <div class="container mb-5 mt-3">
          <div class="row d-flex align-items-baseline">
            <div class="col-xl-9">
              <p style="color: #7e8d9f;font-size: 20px;">Invoice >> <strong>Order ID: <%=orderdata.orderid %></strong></p>
             
            </div>
            <hr>
            <div>
              <button class="btn btn-warning ml-left" id="printInvoice">Print</button>
            </div>
          </div>
          <br><br>
        
          <div class="container">
            <div class="col-md-12">
              <div class="text-center">
                <p class="pt-0"><h3><span style="color: #000000; font-weight: bold"> Shoe Studio</span> </h3></p>
              </div>
        
            </div>
        
        
            <div class="row">
              <div class="col-xl-8 ">
                <ul class="list-unstyled" >
                  <li class="text-muted"><h4>To:</h4> <span style="color:#5d9fc5 ;"><h5><%=orderdata.address[0].name %> </h5></span></li>
                  <li class="text-muted"><h5><%=orderdata.address[0].house  %></h5></li>
                  <li class="text-muted"><h5><%=orderdata.address[0].district  %></h5></li>
                  <li class="text-muted"><h5><%=orderdata.address[0].state  %></h5></li>
                  <li class="text-muted"><h5><i class="fa fa-envelope "></i><%=orderdata.address[0].pincode  %> </h5></li>
                  <li class="text-muted"><h5><i class="fa fa-phone "></i> <%=orderdata.address[0].mobileNo  %></h5></li>
                </ul>
              </div>
              <div class="col-xl-4">
                <p class="text-muted"><h4>Invoice</p></h4>
                <ul class="list-unstyled">
                  <li class="text-muted"><i class="fa fa-circle" style="color:#40464c ;"></i> <span
                    class="fw-bold">Payment Method: </span><%=orderdata.order[0].paymentmethod %></li>
                  <li class="text-muted"><i class="fa fa-circle" style="color:#40464c  ;"></i> <span
                      class="fw-bold">Ordered Date: </span><%= new Date(orderdata.order[0].date).toLocaleDateString('en-GB') %></li>
                 
                  <li class="text-muted"><i class="fa fa-circle" style="color:#40464c  ;"></i> <span
                      class="me-1 fw-bold">Order Status: </span><%=orderdata.order[0].status  %></li>
                </ul>
              </div>
            </div>
            <div class="row " style="overflow-y: scroll;">
              <table class="table table-striped table-borderless" style="margin-top:20px ; ">
                <thead style="background-color: #ffffff;" class="text-white">
                  <tr style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color: #000000;font-size: larger;" >
                    <th scope="col">Product</th>
                    <th scope="col">Unit Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Amount</th>
                  </tr>
                </thead>
                <tbody>
                    <% for( let i = 0; i < orderdata.order.length; i++ ) { %>
                    
                 
                  <tr style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-size: larger;">
                    <td><%=orderdata.order[i].product.product_name%></td>
                    <td>₹ <%=orderdata.order[i].product.price  %></td>
                    <td><%=orderdata.order[i].quantity %></td>
                    <td>₹ <%=orderdata.order[i].total  %></td>
                  </tr>
                  <% } %>
                </tbody>
        
              </table>
            </div>
            <div class="row">
        
              <div class="col-lg-4 ml-4">
                <h4><ul class="list-unstyled ">
                  <li class=" ms-3" style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"><span class="text-black me-4">SubTotal: </span>₹ <%=orderdata.subtotal%></li>
                    <li class=" ms-3" style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"><span class="text-black me-4"> Grand Total: </span><span>₹<%=orderdata.grandtotal%></span></li>
                  </ul></h4>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-xl-12 justify-content-center d-flex">
                <p><span style="color: #ff3368; font-weight: bold">Thank you for purchasing from us.</span></p>
              </div>
        
            </div>
        
          </div>
        </div>
        </div>
        </div>
      </div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
        
<script>
    document.getElementById("printInvoice").addEventListener("click", function() {
        window.print();
    });

</script>


<%- include('../layout/homefooter.ejs'); -%>
